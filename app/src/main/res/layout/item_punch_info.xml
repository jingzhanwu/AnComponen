<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width"
    android:divider="@color/_xpopup_list_divider"
    android:showDividers="beginning|end"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/size_14"
    android:paddingVertical="@dimen/size_10">

    <LinearLayout
        style="@style/match_width"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_17"
            android:layout_height="@dimen/size_17"
            android:src="@drawable/ic_blue_time" />

        <TextView
            android:id="@+id/tvContent"
            style="@style/wrap_content"
            android:layout_marginStart="@dimen/size_4"
            android:text="今日打卡1次，共计0小时"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        style="@style/match_width"
        android:layout_marginTop="@dimen/size_6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPunchOrder"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:background="@drawable/bg_grey_circle"
            android:gravity="center"
            android:text="上"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_tiny" />

        <TextView
            android:id="@+id/tvPunchTime"
            style="@style/wrap_content"
            android:layout_marginStart="@dimen/size_4"
            android:text="打卡时间 08：56"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPunchDes"
            style="@style/wrap_content"
            android:layout_marginStart="@dimen/size_4"
            android:text="（上班 时间 09：00 ）" />
    </LinearLayout>

    <LinearLayout
        style="@style/match_width"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_14"
            android:layout_height="@dimen/size_16"
            android:src="@drawable/ic_loc" />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/match_width"
            android:layout_marginStart="@dimen/size_6"
            android:text="七宝农贸市场" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPunchStatus"
        style="@style/wrap_content"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_6"
        android:layout_marginBottom="@dimen/size_10"
        android:background="@drawable/bg_punch_normal"
        android:paddingHorizontal="@dimen/size_12"
        android:paddingVertical="@dimen/size_2"
        android:text="正常"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>