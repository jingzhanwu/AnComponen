<resources>

    <style name="NoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <!-- 音频录制 对话框-->
    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--/背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--    视频播放相关使用-->
    <style name="FloatWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_float_window_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_float_window_exit</item>
    </style>

</resources>
