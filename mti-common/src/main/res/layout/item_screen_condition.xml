<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width"
    android:orientation="vertical">

    <LinearLayout
        style="@style/match_width"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/match_width"
            android:layout_weight="1"
            android:text="标题"
            android:textColor="@color/black_content"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tvSubTitleDes"
            style="@style/match_width"
            android:layout_marginLeft="@dimen/size_24"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:paddingLeft="@dimen/size_16"
            android:paddingTop="@dimen/size_10"
            android:paddingRight="@dimen/size_16"
            android:paddingBottom="@dimen/size_10"
            android:src="@drawable/icon_arrow_down_gray" />
    </LinearLayout>

    <com.mti.component.common.tag.FlowComponent
        android:layout_marginBottom="@dimen/size_10"
        android:id="@+id/tagComponent"
        style="@style/match_width" />


</LinearLayout>