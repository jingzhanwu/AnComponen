<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginRight="@dimen/size_10">

        <TextView
            android:id="@+id/tvKeyBoardNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:background="@drawable/shape_custom_keyboard_bg"
            android:gravity="center_vertical"
            android:hint="请输入号码..."
            android:maxLength="11"
            android:paddingLeft="@dimen/size_15"
            android:text=""
            android:textColor="@color/black_title"
            android:textColorHint="@color/black_hint"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/size_16"
            android:background="@drawable/ic_keyboard_del" />
    </RelativeLayout>


    <com.mti.component.common.dial.ChipLayout
        android:id="@+id/chipLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_22"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginRight="@dimen/size_22"
        android:layout_marginBottom="@dimen/size_13" />

    <LinearLayout
        android:id="@+id/bottomBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:background="#DEEFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llVoice"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_46"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="@dimen/size_26"
                android:layout_height="@dimen/size_28"
                android:layout_marginRight="@dimen/size_13"
                android:src="@drawable/ic_voice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音电话"
                android:textColor="#0081F9"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/size_p5"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="center_vertical"
            android:background="#A3D1FD" />

        <LinearLayout
            android:id="@+id/llVideo"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_46"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_32"
                android:layout_marginRight="@dimen/size_13"
                android:src="@drawable/ic_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频通话"
                android:textColor="#0081F9"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>